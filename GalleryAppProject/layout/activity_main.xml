<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/app_wallpaper"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GALLERY APP"
        android:textSize="36sp"
        android:textColor="#FFFFFF"
        android:fontFamily="monospace"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_main_images_id"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="24dp"
        android:elevation="8dp"
        android:fontFamily="monospace"
        android:text="◀ IMAGES ▶"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:backgroundTint="#60FFFFFF"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_main_title"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="4dp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_main_upload_id"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="24dp"
        android:elevation="8dp"
        android:fontFamily="monospace"
        android:text="◀ UPLOAD ▶"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:backgroundTint="#60FFFFFF"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_main_title"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="4dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_main_exit_id"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="456dp"
        android:layout_marginEnd="24dp"
        android:elevation="8dp"
        android:fontFamily="monospace"
        android:text="⌫ EXIT ⌦"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:backgroundTint="#60FFFFFF"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_main_title"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="4dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
