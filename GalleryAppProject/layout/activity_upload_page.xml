<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/upload_wallpaper"
    android:padding="16dp">

    <EditText
        android:id="@+id/etxt_image_url_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="25dp"
        android:hint="Enter Image URL"
        android:minHeight="48dp"
        android:textColor="@android:color/black"
        android:background="#9F9F9F"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/etxt_tag_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back_id" />

    <EditText
        android:id="@+id/etxt_tag_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="50dp"
        android:background="#9F9F9F"
        android:hint="Enter Image Tag"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/btn_save_image_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxt_image_url_id" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save_image_id"
        android:layout_width="315dp"
        android:layout_height="123dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="70dp"
        android:elevation="8dp"
        android:fontFamily="monospace"
        android:text="✧ Save Image ✧"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:backgroundTint="#60FFFFFF"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxt_tag_id"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="4dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_back_id"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="269dp"
        android:layout_marginBottom="35dp"
        android:elevation="8dp"
        android:fontFamily="monospace"
        android:text="⌫ Back"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:backgroundTint="#60FFFFFF"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/etxt_image_url_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
