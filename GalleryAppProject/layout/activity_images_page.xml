<?xml version="1.0" encoding="utf-8"?>
<!--making it scrollable-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/app_images_wallpaper"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

<!--        same as other classes-->
        <TextView
            android:id="@+id/txt_image_page_title_id"
            android:layout_width="239dp"
            android:layout_height="59dp"
            android:layout_marginStart="83dp"
            android:layout_marginTop="32dp"
            android:text="Images Page"
            android:textColor="#000000"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btn_back_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_back_id"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="258dp"
            android:elevation="8dp"
            android:fontFamily="monospace"
            android:text="âŒ« Back"
            android:textColor="#000000"
            android:textSize="15sp"
            app:backgroundTint="#60FFFFFF"
            app:cornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_image_page_title_id"
            app:strokeColor="#000000"
            app:strokeWidth="4dp" />

        <EditText
            android:id="@+id/etxt_search_id"
            android:layout_width="219dp"
            android:layout_height="50dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="54dp"
            android:background="#9F9F9F"
            android:hint="Look up an image"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toTopOf="@+id/recycler_view_id"
            app:layout_constraintEnd_toStartOf="@+id/btn_search_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_back_id"
            app:layout_constraintVertical_bias="0.434" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_search_id"
            android:layout_width="136dp"
            android:layout_height="57dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="42dp"
            android:elevation="8dp"
            android:fontFamily="monospace"
            android:text="ðŸ”Ž Search"
            android:textColor="#000000"
            android:textSize="15sp"
            app:backgroundTint="#60FFFFFF"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toTopOf="@+id/recycler_view_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/etxt_search_id"
            app:layout_constraintTop_toBottomOf="@+id/txt_image_page_title_id"
            app:strokeColor="#000000"
            app:strokeWidth="4dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:background="#40FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_search_id" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
